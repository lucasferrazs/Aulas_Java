package _2scanner;
import java.util.Scanner;
public class exemploPratico {
	


	    public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);

	        System.out.print("Digite seu nome: ");
	        String nome = sc.nextLine();

	        System.out.print("Digite sua idade: ");
	        int idade = sc.nextInt();
	        sc.nextLine(); // Consumir a quebra de linha

	        System.out.print("Digite sua profissão: ");
	        String profissao = sc.nextLine();

	        System.out.println("Olá, " + nome + "! Você tem " 
	        + idade + " anos e trabalha como " + profissao + ".");

	        sc.close();
	    
	/*
	 Atividades usando entrada de dados 
	 
	  1 . receber 2 numeros e fazer a soma entre eles.
	  
	  2 . receber 3 numeros e criar uma media entre eles
	   
	  3 . receber 2 numeros e fazer a divisão entre eles 
	
	  4 . receber 2 numeros e fazer a multiplicação entre eles
	   
	 
	 */

		
		
	}
}
